<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoadStaffList</servlet-name>
        <servlet-class>controller.LoadStaffList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadStaffList</servlet-name>
        <url-pattern>/LoadStaffList</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <jsp-config>
        <jsp-property-group>
            <description>footer and header settings</description>
            <url-pattern>/index.jsp</url-pattern>
            <url-pattern>/view/*</url-pattern>
            <include-prelude>/view/components/header.jspf</include-prelude>
            <include-coda>/view/components/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>
    <security-constraint>
        <display-name>admin</display-name>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <description/>
            <url-pattern>/view/secureAdmin/*</url-pattern>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>staff</web-resource-name>
            <description/>
            <url-pattern>/view/secureStaff/ManageOrder.jsp</url-pattern>
            <url-pattern>/view/secureStaff/ProductList.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>adminRole</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>staff</display-name>
        <web-resource-collection>
            <web-resource-name>staff</web-resource-name>
            <description/>
            <url-pattern>/view/secureStaff/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>staffRole</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>user</display-name>
        <web-resource-collection>
            <web-resource-name>user</web-resource-name>
            <description/>
            <url-pattern>/view/secureUser/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>userRole</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/view/Login.jsp</form-login-page>
            <form-error-page>/view/ErrorPage.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>adminRole</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>staffRole</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>userRole</role-name>
    </security-role>
</web-app>
